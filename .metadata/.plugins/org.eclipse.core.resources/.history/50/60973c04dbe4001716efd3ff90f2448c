package test;

import java.util.ArrayList;

import homeAutomation.Automation;
import homeAutomation.Component;
import homeAutomation.HAManager;

public class TestHAManager {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		HAManager theManager = new HAManager(); //make new manager
		ArrayList<Component> allComponents = theManager.getComponenten();	//get components and automations in lists
		ArrayList<Automation> allAutomations = theManager.getAutomations();
		String componentText = "Currently there are " + allComponents.size() + " components. Named:";
		String automationText = "Currently there are " + allAutomations.size() + " automations. Named:";

		textComps(allComponents);
		textComps(allAutomations);
		System.out.println(componentText);
		System.out.println(automationText);


		theManager.createNewComponent("wifi");
		theManager.createNewComponent("Kitchen Light");

		allComponents = theManager.getComponenten();
		allAutomations = theManager.getAutomations();


		theManager.createNewAutomation("Wifi on > Kitchen Light on", allComponents.get(0), true, allComponents.get(allComponents.size()-1), true);

		System.out.println("Currently there are " + allComponents.size() + " components.");
		System.out.println("Currently there are " + allAutomations.size() + " automations.");
	} //end main

	public static void textComps(allComponents){
		for (int i = 0 ; i<allComponents.size() ; i++){
			componentText += " " + allComponents.get(i).getName() + ".";
		}
	}
	public static void textAuts(allAutomations){
		for (int i = 0 ; i<allAutomations.size() ; i++){
			automationText += " " + allAutomations.get(i).getName() + ".";
		}
	}


}// end doc
